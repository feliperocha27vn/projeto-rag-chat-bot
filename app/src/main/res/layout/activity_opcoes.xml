<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/btnVoltar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Voltar"
        android:layout_gravity="start"
        android:padding="4dp"
        android:focusable="true"
        android:clickable="true" />

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quais assuntos mais te interessam?"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#222222"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"/>

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/tvSubtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione seus assuntos preferidos."
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="16dp"/>

    <!-- Grade de opções -->
    <GridLayout
        android:id="@+id/gridOpcoes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="2"
        android:rowCount="4"
        android:alignmentMode="alignMargins"
        android:rowOrderPreserved="false"
        android:useDefaultMargins="true">

        <LinearLayout
            android:id="@+id/infosAcademicas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/opcao_fundo"
            android:padding="16dp"
            android:clickable="true">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_graduation_cap"
                android:contentDescription="Informações acadêmicas"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Infos acadêmicas"
                android:textColor="#222222"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tourFateb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/opcao_fundo"
            android:padding="16dp"
            android:clickable="true">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_tour"
                android:contentDescription="Tour pelo campus"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tour pela Fateb"
                android:textColor="#222222"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/corpoDocente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/opcao_fundo"
            android:padding="16dp"
            android:clickable="true">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_docent"
                android:contentDescription="Corpo Docente e Departamentos"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Corpo docente"
                android:textColor="#222222"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/outrasDuvidas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/opcao_fundo"
            android:padding="16dp"
            android:clickable="true">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_other_doubts"
                android:contentDescription="Suporte a outras dúvidas"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outras dúvidas"
                android:textColor="#222222"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>


    </GridLayout>

</LinearLayout>