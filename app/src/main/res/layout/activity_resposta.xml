<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header com botu00e3o voltar e tu00edtulo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#222222"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnVoltarResposta"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_revert"
            android:contentDescription="Voltar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fateb Assistente"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- u00c1rea de conteudo -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Pergunta -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sua pergunta:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvPerguntaTexto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto da pergunta aqui"
                android:textSize="14sp"
                android:textColor="#555555"
                android:background="#F9F9F9"
                android:padding="12dp"
                android:layout_marginBottom="24dp" />

            <!-- Resposta -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resposta:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvRespostaTexto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto da resposta aqui"
                android:textSize="14sp"
                android:textColor="#333333"
                android:background="#E8F5E9"
                android:padding="12dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>